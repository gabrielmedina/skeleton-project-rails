<%= render 'layouts/head_devise' %>

<body class="devise">
  <%= render 'layouts/alerts' %>

	<section class="container">
		<h1 class="devise-logo">
      <%= image_tag('admin/logo.png') %>
    </h1>

		<div class="devise-content">
      <h2 class="devise-title">Reenviar instruções para desbloquear</h2>

      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
        <div class="devise-field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="devise-submit">
          <%= f.submit 'Reenviar', class: 'devise-btn' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </section>
</body>
