<%= render 'layouts/head_devise' %>

<body class="devise">
  <%= render 'layouts/alerts' %>

	<section class="container">
		<h1 class="devise-logo">
      <%= image_tag('admin/logo.png') %>
    </h1>

		<div class="devise-content">
  		<h2 class="devise-title">Entrar</h2>

			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  <div class="devise-field">
			  	<%= f.label :email, 'E-mail' %>
			  	<%= f.email_field :email, autofocus: true, required: true %>
			  </div>

			  <div class="devise-field">
			  	<%= f.label :password, 'Senha' %>
			    <%= f.password_field :password, autocomplete: 'off', required: true %>
			  </div>

				<div class="row">
				  <% if devise_mapping.rememberable? -%>
				    <div class="devise-col devise-checkbox">
				    	<%= f.check_box :remember_me %>
				    	<%= f.label :remember_me, 'Lembrar-me' %>
				    </div>
				  <% end -%>

				  <div class="devise-col devise-submit">
				  	<%= f.submit 'Entrar', class: 'devise-btn' %>
				  </div>
			  </div>
			<% end %>
		</div>

		<div class="devise-links">
			<%= render 'devise/shared/links' %>
		</div>
	</section>
</body>
